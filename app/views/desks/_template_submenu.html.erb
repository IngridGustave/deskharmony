<div class="submenu ">
  <i class="fa-solid fa-xmark" data-action="click->menu-contextuel#remove"></i>
  <h3>Prochaine disponibilité :</h3>
  <% desks.each do |date| %>
    <div class="direct-book">
      <%= simple_form_for @appointment, html: {class: "space", data:{ deskconnect_target: 'formModal'}} do |f| %>
        <%= f.input :start_at,
          as: :string,
          label: false,
          placeholder: "Début de réservation",
          input_html: { value: date ,data: { controller: "datepicker", deskconnect_target: "modalstart"}}
        %>
        <% f.input :end_at,
          as: :hidden,
          as: :string,
          label: false,
          placeholder: "Fin de réservation",
          input_html: { data: { controller: "datepicker", deskconnect_target: "modalend"}}
        %>
        <%= f.input :desk_id,
          as: :hidden,
          label: false,
          input_html: { value: desk.id}
        %>
        <%= f.submit "Réserver",
          class: "btn-form",
          data: {action: "click->deskconnect#submit"}
        %>
      <% end %>
    </div>
  <% end %>
  <%= link_to "bureau", desk_path(desk), class: "btn-submenu" %>
</div>
